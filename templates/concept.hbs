<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - Interactive Learning Guide</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 4px;
            margin: 20px 0;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #00f260, #0575e6);
            width: 0%;
            transition: width 0.3s ease;
            border-radius: 4px;
        }

        .concept-selector {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .concept-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 3px solid transparent;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .concept-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        }

        .concept-card.active {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }

        .concept-card h3 {
            color: #667eea;
            margin-bottom: 10px;
            font-size: 1.3em;
        }

        .concept-card .emoji {
            font-size: 2em;
            margin-bottom: 10px;
            display: block;
        }

        .content-area {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            min-height: 500px;
        }

        .concept-content {
            display: none;
        }

        .concept-content.active {
            display: block;
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .section {
            margin-bottom: 25px;
            padding: 20px;
            background: #f8f9ff;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }

        .section h4 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 1.2em;
        }

        .example-box {
            background: linear-gradient(135deg, #ffeaa7, #fab1a0);
            padding: 15px;
            border-radius: 10px;
            margin: 15px 0;
            border-left: 4px solid #e17055;
        }

        .quiz-section {
            background: linear-gradient(135deg, #a8edea, #fed6e3);
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
        }

        .quiz-question {
            font-weight: bold;
            margin-bottom: 15px;
            color: #2d3436;
        }

        .quiz-options {
            display: grid;
            gap: 10px;
        }

        .quiz-option {
            padding: 10px 15px;
            background: white;
            border: 2px solid #ddd;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .quiz-option:hover {
            background: #f1f2f6;
            border-color: #667eea;
        }

        .quiz-option.correct {
            background: #00b894;
            color: white;
            border-color: #00b894;
        }

        .quiz-option.incorrect {
            background: #e17055;
            color: white;
            border-color: #e17055;
        }

        .comparison-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .comparison-table th {
            background: #667eea;
            color: white;
            padding: 15px;
            text-align: left;
        }

        .comparison-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
        }

        .comparison-table tr:nth-child(even) {
            background: #f8f9ff;
        }

        .nav-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .btn {
            padding: 12px 25px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 1em;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .summary-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }

        .summary-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            border-top: 4px solid #667eea;
        }

        .key-point {
            background: #e8f4fd;
            padding: 10px;
            border-radius: 5px;
            margin: 10px 0;
            border-left: 3px solid #667eea;
        }

        .welcome-screen {
            text-align: center;
            color: #555;
        }

        .welcome-screen h2 {
            color: #667eea;
            margin-bottom: 20px;
        }

        .scenario-box {
            background: linear-gradient(135deg, #e8f5e8, #f0f8ff);
            padding: 20px;
            border-radius: 10px;
            margin: 15px 0;
            border: 2px solid #4CAF50;
        }

        @media (max-width: 768px) {
            .container { padding: 10px; }
            .concept-selector { grid-template-columns: 1fr; }
            .nav-buttons { flex-direction: column; gap: 10px; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>{{header.icon}} {{header.title}}</h1>
            <p>{{description}}</p>
            <div class="progress-bar">
                <div class="progress-fill" id="progressFill"></div>
            </div>
            <p id="progressText">Select a concept to begin learning</p>
        </div>

        <div class="concept-selector">
            {{#each concepts}}
            <div class="concept-card" onclick="showConcept('{{id}}')">
                <span class="emoji">{{emoji}}</span>
                <h3>{{name}}</h3>
                <p>{{short_description}}</p>
            </div>
            {{/each}}
        </div>

        <div class="content-area">
            {{#each concepts}}
            <div id="{{id}}" class="concept-content">
                <h2>{{emoji}} {{name}}: {{subtitle}}</h2>
                
                <div class="section">
                    <h4>Core Idea</h4>
                    <p>{{core_idea}}</p>
                </div>

                {{#if key_assumptions}}
                <div class="section">
                    <h4>Key Assumptions</h4>
                    {{#each key_assumptions}}
                    <div class="key-point">
                        <strong>{{title}}:</strong> {{description}}
                    </div>
                    {{/each}}
                </div>
                {{/if}}

                {{#if example}}
                <div class="example-box">
                    <h4>Real-World Example: {{example.title}}</h4>
                    <p>{{example.description}}</p>
                </div>
                {{/if}}

                {{#if scenario}}
                <div class="scenario-box">
                    <h4>{{name}} Scenario</h4>
                    <p><strong>Scenario:</strong> {{scenario.situation}}</p>
                    <p><strong>What happens:</strong> {{scenario.what_happens}}</p>
                </div>
                {{/if}}

                {{#if quiz}}
                <div class="quiz-section">
                    <div class="quiz-question">Quiz: {{quiz.question}}</div>
                    <div class="quiz-options">
                        {{#each quiz.options}}
                        <div class="quiz-option" onclick="selectQuizOption(this, {{is_correct}})">({{@index}}) {{text}}</div>
                        {{/each}}
                    </div>
                </div>
                {{/if}}

                {{#if additional_sections}}
                {{#each additional_sections}}
                <div class="section">
                    <h4>{{title}}</h4>
                    {{#if content}}
                    <p>{{content}}</p>
                    {{/if}}
                    {{#if points}}
                    {{#each points}}
                    <div class="key-point">
                        {{#if title}}<strong>{{title}}:</strong> {{/if}}{{description}}
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
                {{/each}}
                {{/if}}
            </div>
            {{/each}}
        </div>

        <div class="nav-buttons">
            {{#if showComparison}}
            <button class="btn" onclick="showComparison()">{{comparisonButton.icon}} {{comparisonButton.text}}</button>
            {{/if}}
            {{#if showFinalQuiz}}
            <button class="btn" onclick="showFinalQuiz()">{{finalQuizButton.icon}} {{finalQuizButton.text}}</button>
            {{/if}}
        </div>
    </div>

    <script>
        let visitedConcepts = new Set();
        let currentConcept = 'welcome';
        const totalConcepts = {{concepts_length}};

        function showConcept(conceptId) {
            // Hide all content
            document.querySelectorAll('.concept-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Remove active class from all cards
            document.querySelectorAll('.concept-card').forEach(card => {
                card.classList.remove('active');
            });
            
            // Show selected concept
            document.getElementById(conceptId).classList.add('active');
            
            // Add active class to selected card
            event.target.closest('.concept-card').classList.add('active');
            
            // Track visited concepts
            visitedConcepts.add(conceptId);
            currentConcept = conceptId;
            
            // Update progress
            updateProgress();
        }

        function updateProgress() {
            const progressPercent = (visitedConcepts.size / totalConcepts) * 100;
            document.getElementById('progressFill').style.width = progressPercent + '%';
            
            let progressText = '';
            if (visitedConcepts.size === 0) {
                progressText = 'Select a concept to begin learning';
            } else if (visitedConcepts.size === totalConcepts) {
                progressText = '{{progressMessages.complete}}';
            } else {
                progressText = `{{progressMessages.partial}} ${visitedConcepts.size}/${totalConcepts} {{progressMessages.unit}}`;
            }
            document.getElementById('progressText').textContent = progressText;
        }

        function selectQuizOption(option, isCorrect) {
            // Remove previous selections
            option.parentNode.querySelectorAll('.quiz-option').forEach(opt => {
                opt.classList.remove('correct', 'incorrect');
            });
            
            // Mark the selected option
            if (isCorrect) {
                option.classList.add('correct');
            } else {
                option.classList.add('incorrect');
                // Also show the correct answer
                option.parentNode.querySelectorAll('.quiz-option').forEach((opt, index) => {
                    if (opt.onclick.toString().includes('true')) {
                        opt.classList.add('correct');
                    }
                });
            }
        }

        {{#if showComparison}}
        function showComparison() {
            document.querySelectorAll('.concept-content').forEach(content => {
                content.classList.remove('active');
            });
            
            document.querySelectorAll('.concept-card').forEach(card => {
                card.classList.remove('active');
            });

            const comparisonHTML = `
                <h2>{{comparisonTable.title}}</h2>
                <p>{{comparisonTable.description}}</p>
                
                <table class="comparison-table">
                    <tr>
                        {{#each comparisonTable.headers}}
                        <th>{{this}}</th>
                        {{/each}}
                    </tr>
                    {{#each comparisonTable.rows}}
                    <tr>
                        {{#each this}}
                        <td>{{{this}}}</td>
                        {{/each}}
                    </tr>
                    {{/each}}
                </table>
                
                {{#if comparisonTable.additionalContent}}
                {{{comparisonTable.additionalContent}}}
                {{/if}}
            `;
            
            document.querySelector('.content-area').innerHTML = comparisonHTML;
        }
        {{/if}}

        {{#if showFinalQuiz}}
        function showFinalQuiz() {
            // Implementation for final quiz would go here
            alert('Final quiz functionality would be implemented here');
        }
        {{/if}}

        {{#if customScripts}}
        {{{customScripts}}}
        {{/if}}
    </script>
</body>
</html>
